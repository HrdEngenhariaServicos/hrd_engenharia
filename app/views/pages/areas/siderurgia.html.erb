<div class="page-desktop">
  <div class="wrapper-page wrapper-page-areas" style="<%= @page_background %>">
    <div class="row">
      <div class="col-xs-3">
        <div class="container-page">
          <div class="container-areas-listing">
            <h3>Áreas de atuação</h3>
            <% @areas_nomes.length.times do |area| %>
              <%= link_to "/areas/" + @areas_links[area] do %>
                <div class="areas-listing-cada-area">
                  <p class="<%= "active" if params[:area] == @areas_links[area] %>"><%= @areas_nomes[area] %></p>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-xs-8 col-xs-offset-1">
        <div class="container-page">
          <h1 class="page-title">Siderurgia</h1>

          <p class="page-content">
            As previsões para o ano de 2019 indicam boas perspectivas para o setor nacional de fabricação de aço <a href="http://www.acobrasil.org.br/site2015/processo.html" target="_blank">(AÇO BRASIL)</a>. A HRD oferece soluções estruturais, mecânicas e térmicas para o setor siderúrgico.
          </p>

          <h1 class="page-subtitle">Equipamentos</h1>

          <ul class="lista-equipamentos valores-lista">
            <li class="cada-equipamento">Pontes rolantes e vigas de rolamento;</li>
            <li class="cada-equipamento">Galpões e prédios industriais;</li>
            <li class="cada-equipamento">Pote de escória;</li>
            <li class="cada-equipamento">Pallets de transporte;</li>
          </ul>

          <%= render 'shared/servicos-links' %>

        </div>
      </div>
    </div>
  </div>
</div>

<div class="page-mobile">
  <div class="wrapper-page" style="<%= @page_background %>">
    <div class="container-page">
      <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          Nossas áreas
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu areas-dropdown-mobile-list" aria-labelledby="dropdownMenu1">
          <% @areas_nomes.length.times do |area| %>
            <li class="areas-dropdown-mobile-item">
              <%= link_to "/areas/" + @areas_links[area] do %>
                <p class="<%= "active" if params[:area] == @areas_links[area] %>"><%= @areas_nomes[area] %></p>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

      <h1 class="page-title">Siderurgia</h1>

      <p class="page-content">
        As previsões para o ano de 2019 indicam boas perspectivas para o setor nacional de fabricação de aço <a href="http://www.acobrasil.org.br/site2015/processo.html" target="_blank">(AÇO BRASIL)</a>. A HRD oferece soluções estruturais, mecânicas e térmicas para o setor siderúrgico.
      </p>

      <h1 class="page-subtitle">Equipamentos</h1>

      <ul class="lista-equipamentos valores-lista">
        <li class="cada-equipamento">Pontes rolantes e vigas de rolamento;</li>
        <li class="cada-equipamento">Galpões e prédios industriais;</li>
        <li class="cada-equipamento">Pote de escória;</li>
        <li class="cada-equipamento">Pallets de transporte;</li>
      </ul>

      <%= render 'shared/servicos-links' %>

    </div>
  </div>
</div>
