<div class="wrapper-homepage-banner">
  <div class="container-homepage-banner">
    <div class="intro-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://upload.wikimedia.org/wikipedia/commons/thumb/4/4c/Garzweiler_Tagebau-1230.jpg/1280px-Garzweiler_Tagebau-1230.jpg');">
      <div class="main-title-text">
        <h1 class="main-title-text-line">-</h1>
        <h1 class="main-title-text-line">-</h1>
        <h1 class="main-title-text-line">---</h1>
      </div>
    </div>
  </div>
</div>

<div class="wrapper-page">
  <div class="container-page">

    <!-- Section: Equipe -->
    <h1 class="page-subtitle">
      A EMPRESA
    </h1>

    <%= content(5).html_safe %>

    <div class="home-about-buttons text-center">
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <%= link_to "Conheça a empresa", '/a-empresa', class: "conheca-mais-btn btn" %>
        </div>
        <div class="col-xs-12 col-md-6">
          <%= link_to "Conheça nossa equipe", '/equipe', class: "conheca-mais-btn btn" %>
        </div>
      </div>
    </div>

    <!-- Section: Areas de atuacao -->
    <h1 class="page-subtitle">
      ÁREAS DE ATUAÇÃO
    </h1>

    <%= content(5).html_safe %>

    <br>
    <div class="row">
      <% @areas_nomes.length.times do |area| %>
        <div class="col-xs-12-xs-6 col-lg-4">
          <%= link_to "/areas/" + @areas_links[area] do %>
            <div class="card-solutions card-solutions-big" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= @areas_fotos_url[area] %>);">
              <div class="card-solutions-description">
                <h2><%= @areas_nomes[area] %></h2>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>


  </div>
</div>
