<div class="wrapper-homepage-slideshow" id="slideshow-swipe">
  <div class="container-home-slideshow">
    <div class="row">
      <div class="col-xs-12">
        <div id="home-slider" class="carousel slide" data-ride="carousel" data-interval="6000" data-wrap="true" data-pause="false">
          <!-- Dot indicators -->
          <ol class="carousel-indicators">
            <% @slides_title.length.times do |marker| %>
              <li data-target="#home-slider" data-slide-to="<%= marker %>" class="carousel-indicator <%= "active" if marker == 0 %>"></li>
            <% end %>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">

            <% @slides_title.length.times do |slide| %>
              <div class="item carousel-home-item <%= slide == 0 ? "active" : ""%>" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 100%), url('<%= @slides_image[slide] %>');">
                <div class="carousel-caption">
                  <h1 class="carousel-slide-title">
                    <%= @slides_title[slide] %>
                  </h1>
                  <%= link_to @slides_link[slide] do %>
                    <div class="carousel-slide-button btn">
                      <%= @slides_button[slide] %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Controls of next and previous buttons -->
          <a href="#home-slider" class="left carousel-control" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          </a>
          <a href="#home-slider" class="right carousel-control" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          </a>

        </div>
      </div>
    </div>
  </div>
</div>

