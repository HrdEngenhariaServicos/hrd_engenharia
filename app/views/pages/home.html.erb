<div class="wrapper-homepage-slideshow">
  <div class="container-home-slideshow">
    <div class="row">
      <div class="col-xs-12">
        <div id="home-slider" class="carousel slide" data-ride="carousel" data-interval="6000" data-wrap="true" data-pause="false">
          <!-- Dot indicators -->
          <ol class="carousel-indicators">
            <li data-target="#home-slider" data-slide-to="0" class="active"></li>
            <li data-target="#home-slider" data-slide-to="1"></li>
            <li data-target="#home-slider" data-slide-to="2"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <div class="item carousel-home-item active" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://upload.wikimedia.org/wikipedia/commons/thumb/4/4c/Garzweiler_Tagebau-1230.jpg/1280px-Garzweiler_Tagebau-1230.jpg');">
              <div class="carousel-caption">
                <h1 class="carousel-slide-title">
                  A empresa
                </h1>
                <p class="carousel-slide-description">
                  A HRD Engenharia atua lado a lado com seus parceiros para apresentar soluções técnicas de alto nível que mitigam riscos e agregam valor aos seus ativos
                </p>
                <%= link_to '/a-empresa' do %>
                  <div class="carousel-slide-button btn">
                    Conheça a empresa
                  </div>
                <% end %>
              </div>
            </div>

            <div class="item carousel-home-item" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://upload.wikimedia.org/wikipedia/commons/thumb/4/4c/Garzweiler_Tagebau-1230.jpg/1280px-Garzweiler_Tagebau-1230.jpg');">
              <div class="carousel-caption">
                <h1 class="carousel-slide-title">
                  Áreas de atuação
                </h1>
                <p class="carousel-slide-description">
                  A HRD Engenharia apresenta soluções de excelência em uma grande diversidade de áreas
                </p>
                <%= link_to '/areas' do %>
                  <div class="carousel-slide-button btn">
                    Conheça nossos serviços
                  </div>
                <% end %>
              </div>
            </div>

            <div class="item carousel-home-item" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://upload.wikimedia.org/wikipedia/commons/thumb/4/4c/Garzweiler_Tagebau-1230.jpg/1280px-Garzweiler_Tagebau-1230.jpg');">
              <div class="carousel-caption">
                <h1 class="carousel-slide-title">
                  A equipe
                </h1>
                <p class="carousel-slide-description">
                  A HRD Engenharia conta com uma equipe onde todos possuem uma formação de alto nível e vasta experiência com projetos nas áreas de atuação
                </p>
                <%= link_to '/equipe' do %>
                  <div class="carousel-slide-button btn">
                    Conheça nossa equipe
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Controls of next and previous buttons -->
          <a href="#home-slider" class="left carousel-control" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          </a>
          <a href="#home-slider" class="right carousel-control" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          </a>

        </div>
      </div>
    </div>
  </div>
</div>

<div class="wrapper-page">
  <div class="container-page">

    <!-- Section: Equipe -->
    <h1 class="page-subtitle">
      A EMPRESA
    </h1>

    <%= content(5).html_safe %>

    <div class="home-about-buttons text-center">
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <%= link_to "Conheça a empresa", '/a-empresa', class: "conheca-mais-btn btn" %>
        </div>
        <div class="col-xs-12 col-md-6">
          <%= link_to "Conheça nossa equipe", '/equipe', class: "conheca-mais-btn btn" %>
        </div>
      </div>
    </div>

    <!-- Section: Areas de atuacao -->
    <h1 class="page-subtitle">
      ÁREAS DE ATUAÇÃO
    </h1>

    <%= content(5).html_safe %>

    <br>
    <div class="row">
      <% @areas_nomes.length.times do |area| %>
        <div class="col-xs-12-xs-6 col-lg-4">
          <%= link_to "/areas/" + @areas_links[area] do %>
            <div class="card-solutions card-solutions-big" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= @areas_fotos_url[area] %>);">
              <div class="card-solutions-description">
                <h2><%= @areas_nomes[area] %></h2>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>


  </div>
</div>
