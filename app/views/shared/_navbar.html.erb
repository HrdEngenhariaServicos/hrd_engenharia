<div class="navbar-hrd <%= "navbar-home" if params[:page] == 'home' %>">

  <!-- Logo -->
  <%= link_to "/home" do %>
    <%= image_tag 'logo-white-background.png', class: 'navbar-logo' %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <div class="flex center case-search-div">
      <div class="flex center around"><i class="fa fa-search"></i></div>
      <input type="text" placeholder="Procurar case..." class="case-search case-search-input">
      <div class="case-list case-list-navbar hide">

      </div>
    </div>
    <%= render 'shared/links-a' %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown flex" style="flex-direction: column;">
      <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown" role="button"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu list-no-bullet">
        <%= render 'shared/links-li' %>
        <li><a href="https://www.linkedin.com/company/hrd-solucoes/" class="navbar-wagon-item navbar-wagon-link navbar-contact-link" target="_blank" style="text-transform: capitalize;">
          Linkedin
        </a></li>
      </ul>
    </div>
  </div>
</div>
